{
    "manifest_version": 2,

    "name": "GitHub Better Image Paster",
    "description": "This extension adds some minimal style to pasted images on GitHub.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ],
    "content_scripts": [{
        "matches": ["https://github.com/*"],
        "css": ["content.css"],
        "js": ["content.js"],
        "run_at": "document_end"
    }]
}
